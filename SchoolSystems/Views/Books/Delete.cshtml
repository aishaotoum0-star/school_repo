@model SchoolSystems.Models.Books

@{
    ViewData["Title"] = "Delete";
}
<div class="card shadow">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Delete Books</h6>
    </div>
    <div class="card-body">
        <h3>Are you sure you want to delete this?</h3>

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BooksId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BooksId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BooksPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BooksPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AuthorName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AuthorName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookBrnPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookBrnPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookImgeUrl)
            </dt>
            <dd class="col-sm-10">
                <img src="~/Images/Books/@Model.BookImgeUrl" style="max-width:70px" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AuthorImgeUrl)
            </dt>
            <dd class="col-sm-10">
                <img src="~/Images/Author/@Model.AuthorImgeUrl" style="max-width:70px"/>
            </dd>
        </dl>
        <div>
            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>

