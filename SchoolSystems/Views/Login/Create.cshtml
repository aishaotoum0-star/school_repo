@model SchoolSystems.Models.Login

@{
    ViewData["Title"] = "Create";
}
<div class="card shadow">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Create Login</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                @* <input asp-for="RoleId" class="form-control" /> *@
                <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(ViewBag.Roles, "RolesId", "RolesName"))">
                    <option value="">Select a role</option> <!-- Default option for better UX -->
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                @* <input asp-for="UserId" class="form-control" /> *@
                <select asp-for="UserId" class="form-control" asp-items="@(new SelectList(ViewBag.User, "UserId", "UserName"))">
                    <option value="">Select a User</option> <!-- Default option for better UX -->
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginUserName" class="control-label"></label>
                <input asp-for="LoginUserName" class="form-control" />
                <span asp-validation-for="LoginUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginPassword" class="control-label"></label>
                <input asp-for="LoginPassword" class="form-control" />
                <span asp-validation-for="LoginPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
        <div>
        </div>
    </div>
</div>