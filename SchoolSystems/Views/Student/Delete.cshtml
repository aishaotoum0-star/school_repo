@model SchoolSystems.Models.Student

@{
    ViewData["Title"] = "Delete";
}
<div class="card shadow">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Delete Student</h6>
    </div>
    <div class="card-body">
        <h3>Are you sure you want to delete this?</h3>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudentId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudentId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudentName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudentName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudentPhone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudentPhone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudentEmail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudentEmail)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudentDob)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudentDob)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudentImageURL)
            </dt>
            <dd class="col-sm-10">
                <img src="~/Images/Student/@Model.StudentImageURL" style="max-width:70px"/>
            </dd>
        </dl>
        <div>
            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>


        </div>
    </div>
</div>